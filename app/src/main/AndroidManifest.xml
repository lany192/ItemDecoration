        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LinearLayoutManagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GridLayoutManager1Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GridLayoutManagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GridLayoutManager2Activity"
            android:screenOrientation="portrait" />
